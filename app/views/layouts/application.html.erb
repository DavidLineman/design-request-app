<!DOCTYPE html>
<html>
  <head>
    <title>DesignRequestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-dark bg-dark">
      <a class="navbar-brand display-4" href="#">
        <img src="/docs/4.3/assets/brand/bootstrap-solid.svg" width="40" height="30" class="d-inline-block align-top" alt="">
        Mobile Outfitters Design Requests
      </a>
    </nav>

  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

    <%= yield %>
  </body>
</html>
